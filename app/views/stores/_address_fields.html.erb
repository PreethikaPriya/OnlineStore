<ul>
    <%= f.fields_for :addresses do |addresses_form| %>
      <li>

        <div class="field">
         <%= addresses_form.check_box :_destroy%>
         </div>

        <div class="field">
        <%= addresses_form.label :street1 %> 
        <%= addresses_form.text_field :street1 %> <br>
        </div>

        <div class="field">
        <%= addresses_form.label :street2 %> 
        <%= addresses_form.text_field :street2 %> <br>
        </div>

        <div class="field">
        <%= addresses_form.label :region %> 
        <%= addresses_form.collection_select :region_id, Region.all, :id, :region, {prompt:"select region"} %>  <br>
        </div>

        <div class="field">
        <%= addresses_form.label :zipcode %> 
        <%= addresses_form.collection_select :zipcode_id, Zipcode.all, :id, :zipcode, {prompt:"select Zipcode"} %> <br>
        </div>
        
      </li>
      <br>
    <% end %>
  </ul>

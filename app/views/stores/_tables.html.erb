<script type="text/javascript">
    $(document).ready(function() {
    $('#store_index1').DataTable();
} );
</script>


<table class = "table table-stripped" id="store_index1">
  <thead>
    <tr>
      <th>Name</th>
      <th>Ph num</th>
      <th>Website</th>
      <th>Tags</th>
      <th>Address</th>
      <th>Region</th>
      <th>Zipcode</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @stores = Store.all %>
    <% @stores.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td><%= store.ph_num %></td>
        <td><%= store.website %></td>
        <td><%= store.tags %></td>
        <td>
          <% i = 0%>
          <% store.addresses.each do |address| %>
          Address: <%= i += 1 %><br> 
            <%= address.street1 %> <br>
            <%= address.street2 %> <br>  
          <% end %>
          </td>    
        <td><%= store.region.region%></td>
        <td><%= store.zipcode.zipcode %>
        <td><%= link_to 'Show', store %> |
        <%= link_to 'Edit', edit_store_path(store) %> |
        <%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
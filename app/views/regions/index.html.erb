<script type="text/javascript">
    $(document).ready(function() {
    $('#region_index').DataTable();
} );
</script>

<h1>Listing Regions</h1>

<table class = "table table-stripped" id="region_index">
  <thead>
    <tr>
      <th>Region</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @regions.each do |region| %>
      <tr>
        <td><%= region.region %></td>
        <td><%= link_to 'Show', region %>|
        <%= link_to 'Edit', edit_region_path(region) %>|
        <%= link_to 'Destroy', region, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Region', new_region_path %>
